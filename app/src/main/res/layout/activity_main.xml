<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context="userInfo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:padding="5dp">

        <include layout="@layout/toolbar"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/gradient_background_nonteachers"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-95dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/Hfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/field_of_interest"
            android:fontFamily="@font/aclonica"
            android:textSize="22sp"
            android:textColor="#E1FFFFFF"
            android:layout_marginTop="-300dp"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#E1FFFFFF"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000000"
            android:padding="4dp"
            android:fontFamily="@font/aldrich"
            android:layout_marginTop="250dp"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/Hcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_details"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            app:drawableLeftCompat="@drawable/ic_info_alumuni" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:layout_marginStart="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginStart="60dp"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/batch_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_s_info"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            app:drawableLeftCompat="@drawable/ic_branch" />


        <TextView
            android:id="@+id/D_O_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birth"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/Hbranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/branch"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/Hbatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/batch"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/Hclub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/club_enrolled"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:layout_marginStart="80dp"/>



        <TextView
            android:id="@+id/Hhobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hobbies"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            app:drawableLeftCompat="@drawable/ic_email" />


        <TextView
            android:id="@+id/hoby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:layout_marginStart="80dp"/>


        <TextView
            android:id="@+id/Haddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete_address"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            app:drawableLeftCompat="@drawable/ic_address" />

        <TextView
            android:id="@+id/homeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>


</ScrollView>