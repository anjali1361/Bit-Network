<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    tools:context="registration.SplashActivity">

    <ImageView
        android:id="@+id/alumuni"
        android:layout_width="155dp"
        android:layout_height="125dp"
        android:src="@drawable/alumuni"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <ImageView
        android:id="@+id/seniors"
        android:layout_width="155dp"
        android:layout_height="125dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="686dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toEndOf="@+id/alumuni"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/senior" />

    <TextView
        android:id="@+id/allInOne"
        android:layout_width="214dp"
        android:layout_height="67dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/all_in_one"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alumuni"
        app:layout_constraintVertical_bias="0.952" />

    <ImageView
        android:id="@+id/startup"
        android:layout_width="155dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alumuni"
        app:layout_constraintVertical_bias="0.679"
        app:srcCompat="@drawable/startup" />

    <ImageView
        android:id="@+id/Teachers"
        android:layout_width="155dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toEndOf="@+id/startup"
        app:layout_constraintTop_toBottomOf="@+id/seniors"
        app:layout_constraintVertical_bias="0.651"
        app:srcCompat="@drawable/teacher" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="138dp"
        android:layout_marginTop="113dp"
        app:layout_constraintBottom_toTopOf="@+id/startup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alumuni"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/navigation_drawer_image" />

</androidx.constraintlayout.widget.ConstraintLayout>